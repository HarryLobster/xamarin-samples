<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControlSamples.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:ControlSamples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackLayout Spacing="4">
        <!--  Place new controls here  -->
        <Button
            Command="{Binding SampleClickedCommand}"
            CommandParameter="{x:Static local:SamplePage.NoKeyboardEntry}"
            Text="Entry - No Keyboard" />
        <Button
            Command="{Binding SampleClickedCommand}"
            CommandParameter="{x:Static local:SamplePage.CollectionViewSearch}"
            Text="Collection View - Search Bar" />
        <Button
            Command="{Binding SampleClickedCommand}"
            CommandParameter="{x:Static local:SamplePage.WebViewAutoHeight}"
            Text="Web View - Auto Height" />
        <Button
            Command="{Binding SampleClickedCommand}"
            CommandParameter="{x:Static local:SamplePage.FadingEdges}"
            Text="ScrollView - Fading Edges" />
    </StackLayout>

</ContentPage>
